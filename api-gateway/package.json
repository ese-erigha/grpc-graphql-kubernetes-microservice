{
  "name": "api-gateway",
  "version": "1.0.0",
  "description": "Node.js API GraphQL Gateway",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./dist && tsc",
    "dev": "yarn run build:proto && nodemon",
    "prod": "node dist/server.js",
    "start": "yarn run build:proto && yarn run build && node dist/server.js",
    "lint": "eslint . --ext .ts",
    "prettier-format": "run-script-os",
    "prettier-format:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --write",
    "prettier-format:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-format:default": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "run-script-os",
    "prettier-watch:win32": "onchange \"src/**/*.ts\" -- prettier --write {{changed}}",
    "prettier-watch:darwin:linux": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "prettier-watch:default": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "test": "jest",
    "create:proto:dir": "(cd src && mkdir -p protobuf)",
    "copy:proto": "(cp ../microservices/user-service/user.proto src/protobuf)",
    "build:proto": "yarn run create:proto:dir && yarn run copy:proto && sh proto-node.sh"
  },
  "keywords": [
    "node.js",
    "typegraphql",
    "express.js"
  ],
  "author": "Ese Erigha",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bluebird": "^3.5.36",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/express-jwt": "^6.0.4",
    "@types/express-pino-logger": "^4.0.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash.groupby": "^4.6.6",
    "@types/node": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.5.5",
    "@grpc/proto-loader": "^0.6.9",
    "apollo-server": "^3.6.2",
    "apollo-server-express": "^3.6.2",
    "axios": "^0.26.0",
    "bcrypt": "^5.0.1",
    "bluebird": "^3.7.2",
    "class-validator": "^0.13.2",
    "dataloader": "^2.0.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "express-jwt": "^6.1.0",
    "express-pino-logger": "^7.0.0",
    "graphql": "^15.8.0",
    "jsonwebtoken": "^8.5.1",
    "lodash.groupby": "^4.6.0",
    "pino": "^7.6.5",
    "pino-pretty": "^7.5.1",
    "reflect-metadata": "^0.1.13",
    "save-dev": "^0.0.1-security",
    "type-graphql": "^1.1.1",
    "type-graphql-dataloader": "^0.5.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.43",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
